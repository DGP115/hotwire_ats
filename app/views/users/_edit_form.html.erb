<%= turbo_frame_tag dom_id(user) do %>
  <%= form_with(model: user) do |form| %>
    <div class="flex flex-col md:flex-row items-center px-4 py-4 sm:px-6 justify-between items-baseline">
      <div>
        <%= form.text_field :name, autofocus: true %>
      </div>
      <div>
        <%= form.text_field :email %>
      </div>

      <div class="flex justify-end w-1/3">
        <%= link_to "Cancel", users_path,
                            class: "btn border border-yellow-200 hover:bg-yellow-100 text-sm text-red-700" %>
        <%= form.submit 'Save', class: "btn border border-blue-200 hover:bg-blue-200 text-sm text-blue-700 mr-2" %>
      </div>
    </div>
  <% end %>
<% end %>
